@page
@model BadgeMeUp.Pages.badges.DeleteShareModel

@{
    ViewData["Title"] = "Delete Badge Share";
}

<h3>Are you sure you want to delete this badge assignment?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Badge Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssignedBadge.Badge.Name)
        </dd>

        <dt class="col-sm-2">
            From:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssignedBadge.FromUser.PrincipalName)
        </dd>
        
        <dt class="col-sm-2">
            To:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssignedBadge.User.PrincipalName)
        </dd>

        @if (Model.AssignedBadge.AwardComment != null && Model.AssignedBadge.AwardComment.Length > 0)
        {
            <dt class="col-sm-2">
                Award Comment:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AssignedBadge.AwardComment)
        </dd>
        }
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="AssignedBadge.Id" />
        <a class="btn btn-secondary" asp-page="Edit" asp-route-id="@Model.AssignedBadge.Badge.Id">Cancel</a>
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
