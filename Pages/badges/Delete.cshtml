@page
@model BadgeMeUp.Pages.Badges.DeleteModel

@{
    ViewData["Title"] = "Delete Badge";
}

<h3>Are you sure you want to delete this badge?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Badge.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Badge.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Badge.Criteria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Badge.Criteria)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Badge.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Badge.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Badge.BadgeType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Badge.BadgeType.Name)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Badge.Id"/>
        <input type="submit" value="Delete" class="btn btn-danger"/>
    </form>
</div>