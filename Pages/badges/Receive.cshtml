@page
@using BadgeMeUp.Pages.Shared
@model BadgeMeUp.Pages.Badges.ReceiveModel
@{
    ViewData["Title"] = "Receive Badge";
}

<form method="post">
    <div class="mb-3">
        <p>
            Congratulations! <b>@Model.FromUser.PrincipalName</b> sent you a badge. All you need
            to do is accept it.
        </p>

        <div style="width: 14rem;">
            <partial name="BadgeWidget" model="@(new BadgeWidget(Model.Badge, false))"/>
        </div>

        @if(Model.AwardMessage != null)
        {
            <b>Message from @Model.FromUser.PrincipalName:</b>
            <p>

                @Model.AwardMessage
            </p>
        }
    </div>
    <button type="submit" class="btn-primary btn">Accept Badge</button>
</form>